<Window x:Class="_03_SalesUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_SalesUI"
        mc:Ignorable="d"
        Title="SalesDB" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Click="Button_Click" FontSize="15" Padding="20">Show All Sales</Button>
            <Button Click="Button_Click_1" FontSize="15" Padding="20">Show All Buyers</Button>
            <Button Click="Button_Click_2" FontSize="15" Padding="20">Show All Sellers</Button>
            <Button Click="Button_Click_3" FontSize="15" Padding="20">Show Full Sales</Button>
        </ToolBar>
        <DataGrid Name="dataGrid"></DataGrid>
    </DockPanel>
</Window>
